{
  "id": null,
  "title": "NVMe SMART Metrics",
  "tags": ["smart", "nvme", "storage"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "NVMe Drive Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "smart_device_health",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "displayMode": "basic"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "FAILING"
                },
                "1": {
                  "text": "HEALTHY"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "NVMe Drive Temperatures",
      "type": "gauge",
      "targets": [
        {
          "expr": "smart_device_temperature_celsius",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "max": 80,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 70
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Drive Usage Percentage",
      "type": "gauge",
      "targets": [
        {
          "expr": "smart_device_used_percent",
          "legendFormat": "{{device}} Used"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 80
              },
              {
                "color": "red",
                "value": 95
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Available Spare Blocks",
      "type": "gauge",
      "targets": [
        {
          "expr": "smart_device_spare_percent",
          "legendFormat": "{{device}} Spare"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "green",
                "value": 20
              }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 5,
      "title": "Power-On Time",
      "type": "stat",
      "targets": [
        {
          "expr": "smart_device_power_on_hours_total / 24",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "d",
          "decimals": 0,
          "custom": {
            "displayMode": "basic"
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16}
    },
    {
      "id": 6,
      "title": "Power Cycles",
      "type": "stat",
      "targets": [
        {
          "expr": "smart_device_power_cycles_total",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "displayMode": "basic"
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16}
    },
    {
      "id": 7,
      "title": "Data Written",
      "type": "stat",
      "targets": [
        {
          "expr": "smart_device_data_written_total * 512 / 1024 / 1024 / 1024",
          "legendFormat": "{{device}} GB"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "decimals": 0,
          "custom": {
            "displayMode": "basic"
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "pluginVersion": "8.0.0",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16}
    },
    {
      "id": 8,
      "title": "Temperature Timeline",
      "type": "timeseries",
      "targets": [
        {
          "expr": "smart_device_temperature_celsius",
          "legendFormat": "{{device}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {
              "type": "linear"
            },
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50
              },
              {
                "color": "red",
                "value": 70
              }
            ]
          }
        }
      },
      "options": {
        "tooltip": {
          "mode": "single",
          "sort": "none"
        },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["lastNotNull", "max", "mean"]
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}